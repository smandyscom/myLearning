<Window x:Class="try_dynamically_find_property.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:try_dynamically_find_property"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <!--instanize-->
    <Window.DataContext>
        <local:ViewModel x:Name="vm"/>
    </Window.DataContext>
    
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="245,171,0,0" TextWrapping="Wrap" Text="{Binding Collection[NamedProperty1]}" VerticalAlignment="Top" Width="120"/>
        <Label Content="{Binding NamedStaticProperty}" HorizontalAlignment="Left" Margin="208,282,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding NamedStaticProperty, Mode=TwoWay}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
